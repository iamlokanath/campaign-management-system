{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "build",
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd server && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "build/$1"
    }
  ]
} 